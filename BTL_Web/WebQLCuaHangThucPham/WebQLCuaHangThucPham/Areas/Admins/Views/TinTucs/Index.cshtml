@model IEnumerable<WebQLCuaHangThucPham.Models.TinTuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="card">

        <div class="card-header d-flex justify-content-end">
            <div class="d-flex justify-content-end w-75 ">
                <a class="btn btn-primary" href="/admins/Tintucs/create">Thêm mới</a>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body ">
            <table class=" table  table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.MoTa)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Anh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ND)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MoTa)
                        </td>
                        <td>
                            <img src="~/Content/Frond/img/@item.Anh" width="150px" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ND)
                        </td>
                     



                        <td class="text-center tac-vu ">
                            <a href="/admins/tintucs/edit/@item.MaTT">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/admins/tintucs/details/@item.MaTT">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="/admins/tintucs/Delete/@item.MaTT">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
</div>


