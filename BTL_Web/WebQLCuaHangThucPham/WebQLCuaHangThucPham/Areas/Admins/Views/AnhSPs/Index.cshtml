@model IEnumerable<WebQLCuaHangThucPham.Models.AnhSP>

@{
    ViewBag.Title = "Ảnh Sản Phẩm";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="card">
       
        <div class="card-header d-flex justify-content-between">
            
            <form class="form-inline" asp-controller ="AnhSPs" asp-action ="Index">
                <input class="form-control mr-sm-2" type="Search" name="searchString" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        

            <div class="d-flex justify-content-end w-75 ">
                <a class="btn btn-primary" href="/admins/anhsps/create">Thêm mới</a>
            </div>
        </div>
            <!-- /.card-header -->
            <div class="card-body ">
                <table class=" table  table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                Mã Ảnh
                            </th>
                            <th>
                                Tên Sản Phẩm
                            </th>
                            <th>
                                Tên Ảnh
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.URL)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.MaAnh
                                </td>
                                <td>
                                    @item.SanPham.TenSP
                                </td>
                                <td>
                                    @item.TenAnh

                                </td>
                                <td>
                                    <img src="~/Content/Frond/img/@item.URL" width="150px" />
                                </td>



                                <td class="text-center tac-vu ">
                                    <a href="/admins/AnhSPs/edit/@item.MaAnh">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/admins/anhsps/details/@item.MaAnh">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/admins/anhsps/Delete/@item.MaAnh">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
</div>

