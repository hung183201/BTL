@model IEnumerable<WebQLCuaHangThucPham.Models.LoaiSP>

@{
    ViewBag.Title = "Loại Sản Phẩm";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content">
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <h3 class="card-title w-25"></h3>
            <div class="d-flex justify-content-end w-75">
                <a class="btn btn-primary" href="/admins/loaisps/create">Thêm mới</a>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body ">
            <table class=" table  table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.MaLoai)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TenLoai)
                        </th>
                       
                        
                        <th>
                            @Html.DisplayNameFor(model => model.isActive)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaLoai)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenLoai)
                        </td>
                       
                        <td>
                            @if (item.isActive == 0)
                            {
                                <span class="text-success"> Hoạt động </span> }
                            else
                            {
                                <span class="text-danger">Đang khóa</span>}
                        </td>

                        <td class="text-center tac-vu ">
                            <a href="/admins/LoaiSPs/edit/@item.MaLoai">
                                <i class="fas fa-edit"></i>
                            </a>
                            
                            <a href="/admins/loaisps/Delete/@item.MaLoai">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
</div>

