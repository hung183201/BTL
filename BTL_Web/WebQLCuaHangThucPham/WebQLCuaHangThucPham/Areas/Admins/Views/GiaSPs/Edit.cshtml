@model WebQLCuaHangThucPham.Models.GiaSP

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="card">
        <!-- /.card-header -->
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaGia)

                    <div class="form-group d-flex">
                        @Html.LabelFor(model => model.MaSP, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("MaSP", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaSP, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group d-flex">
                        @Html.LabelFor(model => model.Gia, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group d-flex">
                        @Html.LabelFor(model => model.Time_Begin, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @*<input type="datetime-local" value="@Model.Time_Begin"  />*@
                            @Html.EditorFor(model => model.Time_Begin, new { htmlAttributes = new { @class = "form-control" } })
                            @*@Html.EditorFor(model => model.Time_Begin, new { @class = "form-control", type = "datetime-local" })*@
                            @Html.ValidationMessageFor(model => model.Time_Begin, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group d-flex">
                        @Html.LabelFor(model => model.Time_End, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Time_End, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                            @Html.ValidationMessageFor(model => model.Time_End, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group d-flex w-100">
                        <div class="col-md-12 d-flex justify-content-end">
                            <input type="submit" value="Ghi lại" class="btn btn-success mr-1" />
                            <a href="/admins/giasps/" class="btn btn-danger mx-1">Quay lại</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

