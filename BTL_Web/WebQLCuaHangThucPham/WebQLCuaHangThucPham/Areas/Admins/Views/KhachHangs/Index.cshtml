@model IEnumerable<WebQLCuaHangThucPham.Models.KhachHang>

@{
    ViewBag.Title = "Khách hàng";
    Layout = "~/Areas/Admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
    <div class="card">
        <div class="card-header d-flex justify-content-between">
            <form class="form-inline" asp-controller ="KhachHangs" asp-action ="Index">
                <input class="form-control mr-sm-2" name="searchString" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
            <div class="d-flex justify-content-end w-75">
                <a class="btn btn-primary" href="/admins/khachhangs/create">Thêm mới</a>
            </div>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.MaKH)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HoTen)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SDT)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiaChi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.isActive)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaKH)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.HoTen)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SDT)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DiaChi)
                        </td>
                        <td class="is-active">
                            @if (item.isActive == 0)
                            {
                                <span class="text-success"> Hoạt động </span> }
                            else
                            {
                                <span class="text-danger">Đang khóa</span>}
                        </td>
                        <td class="text-center tac-vu">
                            <a href="/admins/khachhangs/edit/@item.MaKH">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="/admins/khachhangs/details/@item.MaKH">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="/admins/khachhangs/Delete/@item.MaKH">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>


  
